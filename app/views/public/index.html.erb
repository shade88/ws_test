<p>Find me in app/views/public/index.html.erb</p>

<% for m in @messages do %>
    <p><%= m %></p>
<% end if @messages %>

<%= form_tag public_new_message_path do %>
    <%= label_tag(:message, "message:") %>
    <%= text_field_tag(:message) %>
    <%= submit_tag("Send") %>
<% end %>
